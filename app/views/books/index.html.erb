<body class="d-flex flex-column vh-100">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h1 class="font-weight-bold">User info</h1>
        <div><%= image_tag current_user.get_image,width: 100, height: 100 %></div> 
        <div class="font-weight-bold">name: <%= current_user.name %></div>
        <div class="font-weight-bold">introduction: <%= current_user.introduction %></div>
         <div class="btn btn-outline-secondary btn-block"><%= link_to edit_user_path(current_user), class: "font-weight-bold" do %>
          <i class="fa-solid fa-user-gear"></i>
          </div>
          <% end %>
        <h1 class="font-weight-bold">New book</h1>
        <% if @book.errors.any? %>
          <p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>    
    
        <%= form_with model: @book do |f| %>
          <h4 class="font-weight-bold">title</h4>
          <%= f.text_field :title, class: "form-control" %>
          <h4 class="font-weight-bold">opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
          <%= button_tag 'Create Book', class: "btn btn-primary mt-3", type: "submit" %>
        <% end %>     
      </div>

      <div class="col-md-8 offset-md-1">       
        <h1 class="font-weight-bold">Books</h1>

        <table class="table">
          <tr>
            <th></th>
            <th class="font-weight-bold">Title</th>
            <th class="font-weight-bold">Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
            <td>
             <%= link_to user_path(book.user), :class => "user-profile-link" do %>
              <%= image_tag book.user.get_image,width: 100, height: 100  %></td>
              <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</body>