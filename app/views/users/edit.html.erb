<div class="container">
  <h1>User info</h1>
  <% if @user.errors.any? %>
    <%= @user.errors.count %> errors prohibited this obj from being saved:
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
   <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.file_field :profile_image %>
     <h4>introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit 'Update User', class: "btn btn-primary mt-3", type: "submit" %>
  <% end %>
</div>