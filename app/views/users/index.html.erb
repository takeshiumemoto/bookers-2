<body class="d-flex flex-column vh-100">
  <div class="container">
    <div class="row">
      <div class="col-3">
        <h1 class="font-weight-bold">User info</h1>
        <div><%= image_tag current_user.get_image %></div>
        <div class="font-weight-bold">name: <%= current_user.name %></div>
        <div class="font-weight-bold">introduction: <%= current_user.introduction %></div>
        <div><%= link_to "プロフィール編集", edit_user_path(current_user), class: "font-weight-bold" %></div>

        <%= form_with(model: @book, local: true) do |f| %>
          <h4 class="font-weight-bold">title</h4>
          <%= f.text_field :title, class: "form-control" %>
          <h4 class="font-weight-bold">opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
          <%= f.submit '投稿', class: "btn btn-primary mt-3" %>
        <% end %>

        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this obj from being saved:
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>

      <div class="col-9">
        <h1 class="font-weight-bold">Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>show</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_image %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show", user_path(user), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>