<body class="d-flex flex-column vh-100">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h1 class="font-weight-bold">User info</h1>
        <div><%= image_tag current_user.get_image %></div>
        <div class="font-weight-bold">name: <%= current_user.name %></div>
        <div class="font-weight-bold">introduction: <%= current_user.introduction %></div>
      
        <div class="btn btn-outline-secondary btn-block"><%= link_to edit_user_path(current_user) do %>
          <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
        <h1>New book</h1>
        <%= form_with(model: @book, local: true) do |f| %>
          <h4 class="font-weight-bold">title</h4>
          <%= f.text_field :title, class: "form-control" %>
          <h4 class="font-weight-bold">opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
          <%= button_tag 'Create Book', class: "btn btn-primary mt-3", type: "submit" %>
        <% end %>

        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this obj from being saved:
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h1 class="font-weight-bold">Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>show</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_image,width: 100, height: 100 %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>