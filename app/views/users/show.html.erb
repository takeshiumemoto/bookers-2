<h1 class="font-weight-bold">Books</h1>
<body class="d-flex flex-column vh-100">
  <div class="mb-4"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h1 class="font-weight-bold">User info</h1>
        <div><%= image_tag current_user.get_image, class: "rounded-circle" %></div> 
        <div class="font-weight-bold">name: <%= current_user.name %></div>
        <div>introduction: <%= current_user.introduction %></div>
        <div><%=link_to "プロフィール編集",edit_user_path(current_user) %></div>

        <h1 class="font-weight-bold">投稿</h1>
        <% if @book.errors.any? %>
          <p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>    

        <%= form_with model: @book, local:true do |f| %>
          <h4 class="font-weight-bold">title</h4>
          <%= f.text_field :title, value: "", class: "form-control" %>
          <h4 class="font-weight-bold">opinion</h4>
          <%= f.text_area :body, value: "", class: "form-control" %>
          <%= f.submit '投稿', class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
      <div class="col-md-9">
        <table class="table table-striped">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.get_image %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>